{% extends "index.html.twig" %}

{% block content %}
    <div class="thumbnail idm-set-password">
        {% include 'logo.html.twig' %}
        <section class="content">
            <h3>{{ 'Password reset successful'|trans }}</h3>
            <p>
                {{ "Awesome, you've successfully updated your password."|trans }}
                {% set link = '<a href="' ~ path('loginRender') ~ '" id="login_link">' %}
                {% set endlink = '</a>' %}
                {{ 'Now you can log in and check if %link%your profile%endlink% is correct.'|trans({'%link%': link, '%endlink%': endlink})|raw }}
            </p>
        </section>
        <nav class="nav tcenter">
            <a href="{{ path('loginRender') }}" id="login_link">
                <button id="set-new-password-btn" class="btn btn-primary">{{ 'Log In'|trans }}</button>
            </a>
        </nav>
    </div>
{% endblock %}