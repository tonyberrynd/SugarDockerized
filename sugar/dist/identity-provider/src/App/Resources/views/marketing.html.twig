{% set marketingExtrasUrl = app.getMarketingExtrasService.getMarketingContentUrl %}
{% if marketingExtrasUrl %}
    <script type="text/javascript" src="{{ asset('marketing.js', 'js') }}"></script>
    <div class="marketing-extras">
        <img class="coffee-cup" src="{{ asset('img/coffeeCup-sugar-sm.png') }}">
        <div class="iframe-container">
            <iframe src="{{ marketingExtrasUrl }}" scrolling="no"></iframe>
        </div>
    </div>
    <script>
        new MarketingExtras('{{ marketingExtrasUrl }}');
    </script>
{% endif %}
