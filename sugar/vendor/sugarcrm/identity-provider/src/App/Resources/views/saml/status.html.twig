{% extends "index.html.twig" %}

{% block content %}
    <div class="thumbnail idm-consent">
        {% include 'logo.html.twig' %}
        <section class="content">
            {% if user_name is not empty and provider is not empty and tid is not empty %}
                {% set html_user_name = '<strong>' ~ user_name ~ '</strong>' %}
                {% set html_tenant = '<strong>' ~ tid ~ '</strong>' %}
                {% set html_provider = '<strong>' ~ provider ~ '</strong>' %}
                {{ 'You are logged in as %user_name%'|trans({'%user_name%': html_user_name})|raw }}<br />
                {{ 'Your tenant id is %tenant%'|trans({'%tenant%': html_tenant})|raw }}<br />
                {{ 'Authentication provider - %provider%'|trans({'%provider%': html_provider})|raw }}<br />
            {% endif %}
        </section>
        <nav class="nav tcenter">
            <form action="{{  path('samlLogoutInit', {'sessionIndex': IdPSessionIndex, 'nameId': user_name}) }}"  method="get" >
                <button id="logout_btn" class="btn btn-primary">{{ 'Log out'|trans }}</button>
            </form>
        </nav>
    </div>
{% endblock %}
