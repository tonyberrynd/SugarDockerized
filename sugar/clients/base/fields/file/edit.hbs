{{#if value.length}}
    {{#each value}}
        <div class="file-field">
            <div class="square-pill">
            {{#eq mimeType 'image'}}
                <a data-placement="bottom" title="{{name}}" href="{{url}}" target="_blank">{{name}}</a>
            {{/eq}}
            {{#notEq mimeType 'image'}}
                <a data-placement="bottom" title="{{name}}" href="javascript:void(0);" data-url="{{url}}" data-action="download">{{name}}</a>
            {{/notEq}}
                <span class="fa fa-times" data-action="delete"></span>
            </div>
        </div>
    {{/each}}
{{else}}
    <input type="file" name="{{name}}"{{#if def.tabindex}} tabindex="{{def.tabindex}}"{{/if}} />
{{/if}}
{{#unless hideHelp}}{{#if def.help}}<p class="help-block">{{str def.help module}}</p>{{/if}}{{/unless}}
